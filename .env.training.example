# Chef Genius Training Environment Variables
# Copy this file to .env.training and fill in your actual values

# W&B Configuration (Weights & Biases for experiment tracking)
# Get your API key from: https://wandb.ai/authorize
WANDB_API_KEY=your-wandb-api-key-here
WANDB_PROJECT=chef-genius-optimized

# Discord Notifications (optional)
# Create a webhook in Discord Server Settings -> Integrations -> Webhooks
DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# SMS Alerts (optional)
# Format: +1234567890
ALERT_PHONE=+1234567890

# Model Configuration
MODEL_OUTPUT_DIR=/workspace/models/recipe_generation_flan-t5-large
PRETRAINED_MODEL=google/flan-t5-large
CHECKPOINT_PATH=/workspace/models/recipe_generation_flan-t5-large/checkpoint-1000

# Paths mapping (Host -> Container)
# Host: ./models/recipe_generation_flan-t5-large/checkpoint-1000
# Container: /workspace/models/recipe_generation_flan-t5-large/checkpoint-1000

# Training Configuration
EPOCHS=5
BATCH_SIZE=16
GRADIENT_ACCUMULATION_STEPS=2
ENABLE_MIXED_PRECISION=true
ENABLE_PROFILING=true
PROFILE_SCHEDULE="wait=2;warmup=2;active=5;repeat=3"

# CUDA Configuration
CUDA_VISIBLE_DEVICES=0
TORCH_CUDA_ARCH_LIST=8.6

# Performance Settings
# Adjust based on your CPU (Ryzen 3900X = 12 cores)
OMP_NUM_THREADS=12
MKL_NUM_THREADS=12
